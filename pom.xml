        <developer>
            <id>amarjanovic</id>
            <name>Ana Marjanovic</name>
            <email>ana.marjanovic@infobip.org</email>
            <organization>Infobip Ltd.</organization>
            <organizationUrl>https://infobip.com</organizationUrl>
            <roles>
                <role>developer</role>
            </roles>
